<odoo>
    <record id="view_account_move_form_with_related_document" model="ir.ui.view">
        <field name="name">account.move.form.related.document</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="invoice_date" position="after">
                <field name="related_document" widget="reference" string="Related Document" attrs="{'invisible': [('invoice_origin', '=', False)]}"/>
            </field>
        </field>
    </record>
</odoo>
